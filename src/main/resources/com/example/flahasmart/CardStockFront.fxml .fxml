<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flahasmart.controllers.CardStockFrontController">

    <VBox prefWidth="260" spacing="8" styleClass="stock-card" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets bottom="12" left="12" right="12" top="12" />
        </padding>

        <Label fx:id="typeLabel" styleClass="card-title" text="Type" />
        <Label fx:id="varieteLabel" styleClass="card-subtitle" text="Variété" />

        <HBox spacing="8">
            <Label styleClass="muted" text="Début :" />
            <Label fx:id="dateLabel" text="2026-02-17" />
        </HBox>

        <HBox spacing="8">
            <Label styleClass="muted" text="Statut :" />
            <Label fx:id="statutLabel" styleClass="badge" text="en cours" />
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="viewConsommationBtn" onAction="#openConsommationDetail" styleClass="btn-consumption">
                <graphic>
                    <FontIcon iconColor="white" iconLiteral="fas-chart-line" iconSize="14"/>
                </graphic>
                Détails
            </Button>
        </HBox>
    </VBox>
</AnchorPane>